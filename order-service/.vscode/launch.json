    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/node_modules/**/*.js"
            ]
        },
        {
            "name": "Local attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/*.js"
            ],
        }
    ]
}
