{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "checkJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "target": "es2018",
        "lib": ["es2018"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["../node_modules", "**/*.spec.ts", "**/*.spec.js", "**/*.test.ts", "**/*.test.js", "./models"]
}
